# .env.example - Variables de entorno para Railway
# Copia este archivo a .env y completa los valores

# Django Settings
SECRET_KEY=tu-secret-key-super-segura-aqui
DEBUG=False
ALLOWED_HOSTS=.railway.app,tu-dominio.com

# Railway Environment (Railway lo configura automáticamente)
RAILWAY_ENVIRONMENT=production

# Database (Railway lo configura automáticamente cuando agregas PostgreSQL)
DATABASE_URL=postgresql://user:password@host:port/database

# Gemini API
GEMINI_API_KEY=tu-api-key-de-gemini-aqui

# Email Configuration (Opcional)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=tu-email@gmail.com
EMAIL_HOST_PASSWORD=tu-password-de-aplicacion
DEFAULT_FROM_EMAIL=noreply@municipio.gov.co
